#!/bin/bash

volume=$(pactl get-sink-volume 0 | grep -o '[0-9]\+%' -m 1 | grep -o '[0-9]\+' -m 1)

volume_info=$(amixer sget Master)
volume_status=$(echo "${volume_info}" | grep -wo "on\|off" | head -n 1)

if [[ "${volume_status}" = "off" ]]; then
    echo "ðŸŽ§ Mute"
    echo "ðŸŽ§ Mute"
    echo "#fffc00"
else
    echo "ðŸŽ§ ${volume}%"
    echo "ðŸŽ§ ${volume}%"

fi
