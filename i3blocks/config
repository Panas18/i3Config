# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
separator_block_width=7
markup=none



[brightness]
interval=once
signal=10
separator=true
command=~/.local/scripts/brightness


[volume]
#instance=PCM
interval=once
signal=11
command=~/.local/scripts/volume

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
command=~/.local/scripts/memory
separator=true
interval=1
label=  


# Disk usage

# [root]
# command=~/.local/scripts/root_disk
# interval=5
# label=/jj

[disk]
command=~/.local/scripts/disk
interval=5
label=  

#Cpu usages
[cpu_usages]
command=~/.local/scripts/cpu_usages
interval=2
label=  


[battery]
command=~/.local/scripts/battery
markup=pango
interval=1


# Date Time
[time]
command=date +'%a, %b %d, %T'
#command=date -u
interval=1
color=#a0ee45

[bandwidth]
command=~/.local/scripts/bandwidth_c/bandwidth2
interval=persist
markup=pango

# Temperature
#
# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[temperature]
interval=1
command=~/.local/scripts/temperature
label= 
